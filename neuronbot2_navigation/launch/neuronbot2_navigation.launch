<?xml version="1.0" encoding="utf-8"?>
<launch>
	<param name="use_sim_time" value="false" />
	<arg name="open_rviz" default="false" />

	<arg name="map_name" default="map_skyler.yaml" />

	<node name="map_server" pkg="map_server" type="map_server" args="$(find neuronbot2_navigation)/maps/$(arg map_name)"/>

	<include file="$(find neuronbot2_navigation)/launch/include/move_base.launch" />

	<include file="$(find neuronbot2_navigation)/launch/include/amcl.launch" />

	<group if="$(arg open_rviz)">
		<node name="rviz" pkg="rviz" type="rviz" args="-d $(find neuronbot2_navigation)/rviz/view_navigation.rviz" />
	</group>
</launch>
